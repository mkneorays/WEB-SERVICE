package com.itcs.controller;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import javax.inject.Inject;
import javax.servlet.http.HttpSession;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import org.springframework.web.bind.annotation.SessionAttributes;

import com.itcs.beans.Person;
import com.itcs.beans.UserData;
import com.itcs.validator.PersonValidator1;
import com.itcs.validator.PersonValidator2;
import com.itcs.validator.UserDataValidator;


@Controller
@SessionAttributes(names = { "person", "userdata" })
public class LoginController {

	@Inject
	private PersonValidator1 validator;
	@Inject
	private PersonValidator2 validator1;
	@Inject
	private UserDataValidator validator3;
	
	@ModelAttribute("person")
	public Person sessionPage() {
		return new Person();
	}// method
	
	@ModelAttribute("userdata")
	public UserData session1Page() {
		return new UserData();
	}// method
	 @ModelAttribute("countryList")
	   public Map<String, String> getCountryList() {
	      Map<String, String> countryList = new HashMap<String, String>();
	      countryList.put("US", "United States");
	      countryList.put("CH", "China");
	      countryList.put("SG", "Singapore");
	      countryList.put("MY", "Malaysia");
	      return countryList;
	   }
	@ModelAttribute("domains")
	public List<String> populateDomains(){
		//public Map< String, String > populateDomains(){
		/*Map< String, String > phones = new HashMap<String, String>();
	        phones.put("samsung", "SAMSUNG");
	        phones.put("nokia", "NOKIA");
	        phones.put("iphone", "IPHONE");*/
		List<String> list=null;
		list=new ArrayList();
		list.add("Web Developer");
		list.add("Software Developer");
		list.add("Hardware Developer");
		list.add("Support Team");
		return list;
	}
	@RequestMapping("/home.htm")
	public String homePage() {
		System.out.println("home method");
		return "login";
	}// method

	@RequestMapping("/login.htm")
	public String login(@RequestParam("user") String user, @RequestParam String pwd,HttpSession ses) {
		System.out.println("login method  " + user + "  " + pwd);
		ses.setAttribute("user", user);ses.setAttribute("pwd", pwd);
		return "form1";
	}// method

	@RequestMapping("/form1.htm")
	public String form1Method( @ModelAttribute("person") Person person, BindingResult errors) {
		System.out.println("form1Method method  " + person);
		//Use Validator
				if(validator.supports(Person.class)){
					validator.validate(person, errors);
					if(errors.hasErrors())
						return "form1";
				}
		return "form2";
	}// method

	@RequestMapping("/form2.htm")
	public String form2Method( @ModelAttribute("person") Person person,BindingResult errors) {
		System.out.println("form2Method method  " + person);
		//Use Validator
		if(validator1.supports(Person.class)){
			validator1.validate(person, errors);
			if(errors.hasErrors())
				return "form2";
		}
		return "form3";
	}// method

	@RequestMapping("/form3.htm")
	public String form3Method( Model map, @ModelAttribute("userdata") UserData userdata,BindingResult errors,HttpSession ses ) {
		System.out.println("form3Method method  " + userdata);
		//Use Validator
				if(validator3.supports(UserData.class)){
					validator3.validate(userdata, errors);
					if(errors.hasErrors())
						return "form3";
				}//if
		Person form1=(Person) ses.getAttribute("person");
		map.addAttribute("form3", userdata);
		map.addAttribute("form1", form1);
		return "form4";
	}// method
}// class

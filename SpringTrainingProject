

person_error.properties

# person beans class error
p_name.length=Name should be atleast five alphabets
p_email.length=Please pass five character
p_username.length=Username should be 5 digits
p_password.length=Password should be 5 digits

p_age.length=Age must be greater then 15 @ less then 100
p_address.length=Address should be 5 digits
p_Occupation.length=Occupation should be 5 digits

# UserData beans class error
mobile.length=Mobile should be 10 digits
name.length=Name should be atleast five alphabets
email.length=Please pass five character
#job.length=Occupation should be 5 digits

----------------------------------------------------------------------------------
package com.itcs.validator;

import java.util.regex.Pattern;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.itcs.beans.Person;
import com.itcs.beans.UserData;

public class UserDataValidator implements Validator {

	public boolean supports(Class<?> clazz) {
		return clazz.isAssignableFrom(UserData.class);
	}//supports method

	public void validate(Object command, Errors errors) {
		UserData p=(UserData) command;
		int length = String.valueOf(p.getMobile()).length(); //10
		//if(!Pattern.matches("^\\d{10}$", p.getMobile().toString()))
			if(length!=10 )
			errors.rejectValue("mobile", "mobile.length");
		if(p.getNickName().length()<5 )
			errors.rejectValue("nickName", "name.length");
		if(p.getSemail().length()<5 )
			errors.rejectValue("semail", "email.length");
		
	}//validate method

}//class

-------------------------------------------------------------------------------
package com.itcs.validator;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.itcs.beans.Person;

public class PersonValidator1 implements Validator {

	public boolean supports(Class<?> clazz) {
		return clazz.isAssignableFrom(Person.class);
	}//supports method

	public void validate(Object command, Errors errors) {
		Person p=(Person) command;
		if(p.getName().length()<5 )
			errors.rejectValue("name", "p_name.length");
		if(p.getEmail().length()<5 )
			errors.rejectValue("email", "p_email.length");
		if(p.getUsername().length()<5 )
			errors.rejectValue("username", "p_username.length");
		if(p.getPassword().length()<5 )
			errors.rejectValue("password", "p_password.length");
	}//validate method

}//class

--------------------------------------------------------------------------
package com.itcs.validator;

import org.springframework.validation.Errors;
import org.springframework.validation.Validator;

import com.itcs.beans.Person;

public class PersonValidator2 implements Validator {

	public boolean supports(Class<?> clazz) {
		return clazz.isAssignableFrom(Person.class);
	}//supports method

	public void validate(Object command, Errors errors) {
		Person p=(Person) command;
		if(p.getAge()<=15 || p.getAge()>=100 )
			errors.rejectValue("age", "p_age.length");
		if(p.getAddress().length()<5 )
			errors.rejectValue("address", "p_address.length");
		if(p.getOccupation().length()<5 )
			errors.rejectValue("Occupation", "p_Occupation.length");
			}//validate method

}//class


---------------------------------------------------------------------
package com.itcs.beans;
public class Person {
	 
    
    private String name;
    private String email;
    private String username;
    private String password;
    private int age;
    private String address;
    private String Occupation;
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getEmail() {
		return email;
	}
	public void setEmail(String email) {
		this.email = email;
	}
	public String getUsername() {
		return username;
	}
	public void setUsername(String username) {
		this.username = username;
	}
	public String getPassword() {
		return password;
	}
	public void setPassword(String password) {
		this.password = password;
	}
	
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public String getAddress() {
		return address;
	}
	public void setAddress(String address) {
		this.address = address;
	}
	public String getOccupation() {
		return Occupation;
	}
	public void setOccupation(String occupation) {
		Occupation = occupation;
	}
	@Override
	public String toString() {
		return "Person [name=" + name + ", email=" + email + ", username=" + username + ", password=" + password
				+ ", age=" + age + ", address=" + address + ", Occupation=" + Occupation + "]";
	}
	
	
}

		function form1(){
			var x=document.getElementById("name").value;
			var y=document.getElementById("email").value;
			var z=document.getElementById("username").value;
			var a=document.getElementById("password").value;
			if(x==""){
				alert("Please pass Name");
				return false;
			}
			if(y==""){
				alert("Please pass Email");
				return false;
			}
			if(z==""){
				alert("Please pass UserName");
				return false;
			}
			if(a==""){
				alert("Please pass Password");
				return false;
			}

